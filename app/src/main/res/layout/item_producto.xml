<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/primary_alpha_20"
    app:cardBackgroundColor="@color/card_background">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">
        
        <!-- Contenedor de imagen -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="180dp">
            
            <!-- Imagen del producto -->
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_jojo_card_gradient"
                tools:src="@drawable/ic_launcher_foreground" />
            
            <!-- Badge de stock bajo -->
            <TextView
                android:id="@+id/lowStockBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:background="@drawable/bg_neon_button"
                android:padding="6dp"
                android:text="âš¡ ÃšLTIMAS UNIDADES"
                android:textColor="@color/destructive_foreground"
                android:textSize="10sp"
                android:visibility="gone"
                tools:visibility="visible" />
            
            <!-- LÃ­nea decorativa inferior -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_jojo_line_rainbow"
                android:layout_margin="8dp" />
        </FrameLayout>
        
        <!-- Badge de categorÃ­a -->
        <TextView
            android:id="@+id/categoryBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_neon_button"
            android:padding="6dp"
            android:text="â˜… Audio â˜…"
            android:textColor="@color/secondary_foreground"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.15"
            tools:text="â˜… Audio â˜…" />
        
        <!-- Nombre del producto -->
        <TextView
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="AudÃ­fonos Bluetooth Premium"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="AudÃ­fonos Bluetooth Premium" />
        
        <!-- Precio -->
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="$120.000"
            android:textColor="@color/accent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            tools:text="$120.000" />
        
        <!-- BotÃ³n agregar al carrito -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addToCartButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ›’ AGREGAR AL CARRITO"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.15"
            app:backgroundTint="@color/primary"
            app:cornerRadius="8dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/primary_alpha_30"
            app:iconGravity="textStart"
            app:iconTint="@color/primary_foreground"
            style="@style/Widget.Material3.Button.ElevatedButton"
            tools:text="ðŸ›’ AGREGAR AL CARRITO" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
