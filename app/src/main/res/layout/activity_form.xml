<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jojo_background"
    tools:context=".ui.FormActivity">

    <!-- Header -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/jojo_background"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_dialog_email"
                    app:tint="@color/jojo_primary"/>
                    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONTACTO"
                    style="@style/TextAppearance.Neon.Title"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/bg_jojo_gradient_button"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Neon.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NOMBRE"
                        android:textColor="@color/jojo_text_secondary"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/jojo_surface_light"
                        android:paddingHorizontal="16dp"
                        android:hint="Escribe tu nombre..."
                        android:textColorHint="@color/jojo_text_secondary"
                        android:textColor="@color/white"
                        android:inputType="textPersonName"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EMAIL"
                        android:textColor="@color/jojo_text_secondary"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/jojo_surface_light"
                        android:paddingHorizontal="16dp"
                        android:hint="correo@ejemplo.com"
                        android:textColorHint="@color/jojo_text_secondary"
                        android:textColor="@color/white"
                        android:inputType="textEmailAddress"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TELÉFONO (OPCIONAL)"
                        android:textColor="@color/jojo_text_secondary"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/jojo_surface_light"
                        android:paddingHorizontal="16dp"
                        android:hint="+57 300 123 4567"
                        android:textColorHint="@color/jojo_text_secondary"
                        android:textColor="@color/white"
                        android:inputType="phone"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MENSAJE"
                        android:textColor="@color/jojo_text_secondary"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etMessage"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/jojo_surface_light"
                        android:padding="16dp"
                        android:hint="¿En qué podemos ayudarte?"
                        android:textColorHint="@color/jojo_text_secondary"
                        android:textColor="@color/white"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:layout_marginBottom="24dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubmit"
                        style="@style/Widget.Neon.Button"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="ENVIAR" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>