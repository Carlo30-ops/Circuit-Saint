<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jojo_background"
    tools:context=".ui.ProductDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/jojo_background">

        <!-- Custom Header based on screenshot -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="『 VOLVER 』"
                android:textColor="@color/white"
                app:strokeColor="@color/jojo_text_secondary"
                app:icon="@drawable/ic_arrow_back"
                app:iconTint="@color/white"/>
                
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CIRCUIT SAINT"
                android:textSize="20sp"
                style="@style/TextAppearance.Neon.Title"
                android:gravity="center"/>
                
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/bg_jojo_gradient_button"
            android:layout_marginHorizontal="16dp"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Product Image Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Neon.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white">
                
                <ImageView
                    android:id="@+id/productImageDetail"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground"
                    android:padding="32dp"/>
                    
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bg_jojo_gradient_button"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Category Badge -->
            <TextView
                android:id="@+id/categoryBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_neon_button"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp"
                android:text="★ Audio ★"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <!-- Title -->
            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Audífonos Bluetooth Premium"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"/>
                
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/bg_jojo_gradient_button"
                android:layout_marginTop="4dp"/>

            <!-- Rating Stars (Mockup) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="★★★★★ (4.8 / 5)"
                android:textColor="@color/jojo_accent"/>

            <!-- Price -->
            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="$ 120.000"
                style="@style/TextAppearance.Neon.Title"/>
                
            <View
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="@color/jojo_accent"/>

            <!-- Description Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="&gt;&gt; DESCRIPCIÓN &lt;&lt;"
                android:textColor="@color/jojo_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"/>

            <TextView
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Audífonos inalámbricos con cancelación de ruido activa..."
                android:textColor="@color/jojo_text_highlight"
                android:textSize="14sp"
                android:fontFamily="sans-serif-condensed"
                android:lineSpacingMultiplier="1.2"/>

            <!-- Availability Box -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Neon.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:contentPadding="16dp"
                app:strokeColor="@color/jojo_text_secondary">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_view"
                            app:tint="@color/jojo_primary"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" DISPONIBILIDAD"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    
                    <TextView
                        android:id="@+id/productStock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="✓ EN STOCK (15 UNIDADES DISPONIBLES)"
                        android:textColor="@color/jojo_accent"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addToCartButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:text="AGREGAR AL CARRITO"
                android:backgroundTint="@color/jojo_primary"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:icon="@android:drawable/ic_input_add"
                app:iconGravity="textStart"/>
                
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBuyNow"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:text="COMPRAR AHORA"
                android:textColor="@color/jojo_accent"
                app:strokeColor="@color/jojo_accent"
                app:iconTint="@color/jojo_accent"
                app:icon="@android:drawable/stat_sys_warning"
                app:iconGravity="textStart"/>

            <!-- Characteristics List -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="★ CARACTERÍSTICAS ★"
                android:textColor="@color/jojo_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"/>
                
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="✓ GARANTÍA DE 1 AÑO\n\n✓ ENVÍO GRATIS A TODO COLOMBIA\n\n✓ DEVOLUCIÓN EN 30 DÍAS\n\n✓ SOPORTE TÉCNICO INCLUIDO"
                android:textColor="@color/jojo_text_highlight"
                android:lineSpacingExtra="8dp"
                android:textStyle="bold"/>
                
            <!-- Spacer for Bottom Nav -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    
    <!-- Hidden quantity controls to satisfy bindings if any -->
    <LinearLayout
        android:id="@+id/quantityContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone">
        <Button android:id="@+id/btnDecrease"/>
        <TextView android:id="@+id/quantityText"/>
        <Button android:id="@+id/btnIncrease"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>