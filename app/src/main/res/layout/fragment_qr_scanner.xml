<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background"
    android:padding="32dp"
    tools:context=".ui.QrScannerFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qr_section_title"
        android:textAppearance="@style/TextAppearance.CircuitSaint.HeadlineLarge"
        android:textColor="@color/primary"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qr_section_subtitle"
        android:textAppearance="@style/TextAppearance.CircuitSaint.BodyLarge"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <ImageView
        android:id="@+id/qrImage"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:src="@drawable/qr_fixed"
        android:background="@drawable/gradient_card_background"
        android:padding="16dp"
        android:contentDescription="@string/qr_section_title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/openContactButton"
        style="@style/Widget.Neon.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qr_open_contact"
        android:layout_marginTop="32dp" />

</LinearLayout>