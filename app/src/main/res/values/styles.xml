<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema Dark Neon para Circuit Saint según instructivo -->
    <style name="Theme.CircuitSaint" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/primary_foreground</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/secondary_foreground</item>
        <item name="colorTertiary">@color/accent</item>
        <item name="colorOnTertiary">@color/accent_foreground</item>
        
        <!-- Fondos -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Tipografía -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.CircuitSaint.DisplayLarge</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.CircuitSaint.HeadlineLarge</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.CircuitSaint.BodyLarge</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Estilos de texto según instructivo -->
    <style name="TextAppearance.CircuitSaint.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:fontFamily">@font/anton</item>
        <item name="android:textSize">48sp</item>
        <item name="android:letterSpacing">0.20</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primary</item>
    </style>
    
    <style name="TextAppearance.CircuitSaint.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">@font/antonio</item>
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.CircuitSaint.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/staatliches</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.CircuitSaint.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">@font/antonio</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primary_foreground</item>
    </style>

    <!-- Base Neon style (compatibilidad con layouts antiguos que usan @style/Widget.Neon) -->
    <style name="Widget.Neon" parent="android:Widget" />

    <!-- Tipografías legacy Neon para compatibilidad con layouts antiguos -->
    <style name="TextAppearance.Neon.Title" parent="TextAppearance.CircuitSaint.DisplayLarge" />
    <style name="TextAppearance.Neon.Subtitle" parent="TextAppearance.CircuitSaint.BodyLarge" />

    <!-- Card Neon -->
    <style name="Widget.Neon.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">8dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/primary_alpha_20</item>
        <item name="cardCornerRadius">8dp</item>
    </style>
    
    <!-- Botón Neon -->
    <style name="Widget.Neon.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/primary_alpha_30</item>
        <item name="android:textColor">@color/primary_foreground</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Circle Icon Background -->
    <style name="Widget.Neon.CircleIcon">
        <item name="android:background">@drawable/bg_neon_circle</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <!-- Fix for missing styles -->
    <style name="ShapeAppearance.Material3.Corner.Top" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    
    <!-- Estilos JoJo legacy (compatibilidad) -->
    <style name="TextAppearance.JoJo.Heading" parent="TextAppearance.CircuitSaint.HeadlineLarge" />
    <style name="TextAppearance.JoJo.Display" parent="TextAppearance.CircuitSaint.DisplayLarge" />
    <style name="TextAppearance.JoJo.Body" parent="TextAppearance.CircuitSaint.BodyLarge" />
    <style name="Widget.JoJo.Button.Primary" parent="Widget.Neon.Button" />
    <style name="Widget.JoJo.Card" parent="Widget.Neon.Card" />
    
    <!-- Estilo para AlertDialog personalizado -->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/primary_foreground</item>
        <item name="android:colorBackground">@color/card_background</item>
    </style>

</resources>