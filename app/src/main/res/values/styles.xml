<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema Dark Neon para Circuit Saint -->
    <style name="Theme.CircuitSaint" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/jojo_primary</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorPrimaryContainer">@color/jojo_surface</item>
        <item name="colorSecondary">@color/jojo_secondary</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorTertiary">@color/jojo_accent</item>
        <item name="android:colorBackground">@color/jojo_background</item>
        <item name="colorSurface">@color/jojo_surface</item>
        <item name="colorOnSurface">@color/jojo_text_primary</item>
        <item name="android:statusBarColor">@color/jojo_background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Estilo Base para Widgets Neon (Placeholder) -->
    <style name="Widget.Neon" parent="android:Widget">
        <!-- Placeholder to fix build error -->
    </style>

    <!-- Estilo Neon Text -->
    <style name="TextAppearance.Neon.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/jojo_accent</item>
        <item name="android:shadowColor">#80FBBF24</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Neon.Subtitle" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/jojo_text_highlight</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Card Neon -->
    <style name="Widget.Neon.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/jojo_surface</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/jojo_primary</item>
        <item name="cardCornerRadius">12dp</item>
    </style>
    
    <!-- BotÃ³n Neon -->
    <style name="Widget.Neon.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/bg_neon_button</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Circle Icon Background -->
    <style name="Widget.Neon.CircleIcon">
        <item name="android:background">@drawable/bg_neon_circle</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <!-- Fix for missing styles -->
    <style name="ShapeAppearance.Material3.Corner.Top" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    
    <style name="TextAppearance.JoJo.Heading" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/jojo_secondary</item>
    </style>
    
    <style name="TextAppearance.JoJo.Display" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/jojo_text_primary</item>
    </style>
    
    <style name="TextAppearance.JoJo.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/jojo_text_secondary</item>
    </style>
    
    <style name="Widget.JoJo.Button.Primary" parent="Widget.Neon.Button" />
    <style name="Widget.JoJo.Card" parent="Widget.Neon.Card" />

</resources>